@using System.Activities.Statements
@using MomCom.Controllers
@model IEnumerable<MomCom.Models.User>
@{
	ViewBag.Title = "Match";
}
<h2>Index</h2>
<p>
	We found other mom's like you!
</p>
<table class="table">
	<tr>
		<th>
			Parent's First Name
		</th>
		<th>
			Age 0-3
		</th>
		<th>
			Age 4-7
		</th>
		<th>
			Age 8-10
		</th>
		<th>
			Gender
		</th>
		<th>
			Museum
		</th>
		<th>
			Outdoors
		</th>
		<th>
			Active
		</th>
		<th>
			Email
		</th>
		<th>
			Phone
		</th>
	</tr>
	@foreach (var item in ((MomAzureController)this.ViewContext.Controller).Matches())
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.FirstName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AgeRange1)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AgeRange2)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AgeRange3)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Gender)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Museum)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Outdoors)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Active)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Phone)
			</td>
		</tr>
	}
</table>
<h3>Suggested playdate locations!!!</h3>
<table class="table">
	@foreach (var m in ((MomAzureController)this.ViewContext.Controller).Places())
	{
		<tr>
			<td>@m</td>
		</tr>
	}
</table>

